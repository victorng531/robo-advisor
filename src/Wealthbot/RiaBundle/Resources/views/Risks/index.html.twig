{% extends 'WealthbotRiaBundle:Dashboard:index.html.twig' %}

{% block main_content %}
    <div class="row">
        <div class="col-md-10"><h3 class="bbh3">Proposals</h3></div>
    </div>

    <ol type="1" class="questions-list" data-url="{{ path("rx_ria_risks_update_order") }}">
        {% for question in questions %}
            {% include 'WealthbotRiaBundle:Risks:_question_row.html.twig' with { 'question': question } %}
        {% endfor %}
    </ol>

    <div class="new-question">
        <div class="form-group action-buttons">
            <a class="create-question-btn btn" href="{{ path('rx_ria_risks_create_question') }}">New Question</a>
            <a class="btn btn-default"  target="_blank" href="{{ path('rx_ria_risks_test') }}">View and Test</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts '@WealthbotRiaBundle/Resources/public/js/ria.risks.js' %}
        <script type="text/javascript" src="/js/jquery-ui-1.9.2.custom.min.js"></script>

        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}