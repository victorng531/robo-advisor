{% extends is_ajax is defined and is_ajax ? 'WealthbotClientBundle::clear_layout.html.twig' : 'WealthbotClientBundle:Dashboard:index.html.twig' %}

{% block content %}
    <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <strong>This is not a bill.</strong> Your fees have been directly debited from your account.
    </div>

    <div class="box">
        <div class="box-header shadow" data-original-title="">
            <h2>Your Fees</h2>
        </div>

        <div id="billingDataContent" data-client-created-at="{{ client_created_at }}">{% include 'WealthbotClientBundle:Dashboard:_billing_data.html.twig' %}</div>
