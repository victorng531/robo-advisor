{% extends 'WealthbotMailerBundle:Client:_client_layout.html.twig' %}

{% block subject %}
    {% autoescape false %}
        Your Portfolio is Approved
    {% endautoescape %}
{% endblock %}

{% block message %}
    {% if (ria.riaCompanyInformation.slug) %}
        {% set login_url = subdomain_url(ria.riaCompanyInformation, 'fos_user_security_login') %}
    {% else %}
        {% set login_url = url('fos_user_security_login') %}
    {% endif %}

    {{ client.firstName }},<br/><br/>
    Your advisor has approved your portfolio and you may now <a href="{{ login_url }}">login</a> to begin the account opening/transfer process.
{% endblock %}