{% extends 'WealthbotUserBundle::layout.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-4">
        <form action="{{ path("rx_ria_register") }}" method="post" class="regRia-form">
            <div style="padding: 10px 10px 0px 10px">
                <div class="form-group">
                    {{ form_label(form.profile.company, 'Your Company Name', {'label_attr': {'class': 'control-label'}} ) }}
                    <div class="controls">
                        {{ form_errors(form.profile.company) }}
                        {{ form_widget(form.profile.company) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.profile.first_name, 'Your First Name', {'label_attr': {'class': 'control-label'}} ) }}
                    <div class="controls">
                        {{ form_errors(form.profile.first_name) }}
                        {{ form_widget(form.profile.first_name) }}
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        {{ form_label(form.profile.last_name, 'Your Last Name', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(form.profile.last_name) }}
                        <div class="controls">
                            {{ form_widget(form.profile.last_name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Your Email', {'label_attr': {'class': 'control-label'}}) }}
                        <div class="controls">
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.first, 'Your Password', {'label_attr': {'class': 'control-label'}}) }}

                        <div class="controls">
                            {{ form_widget(form.plainPassword.first) }}
                            {{ form_errors(form.plainPassword.first) }}
                            <a class="pop" href="#" rel="popover" title="Password Complexity" data-content="<p>Your password must fufill the following requirements:</p>
                                    <ol>
                                    <li>At least 6 characters</li>
                                    <li>At least 1 uppercase</li>
                                    <li>At least 1 number</li>
                                    <li>No parts of first or last name</li>
                                    </ol>

                                    <p>We will force a password change yearly.</p>">
                                <i class="mini-color mini-ico-info-sign"></i>
                            </a>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.second, 'Confirm Your Password', {'label_attr': {'class': 'control-label'}}) }}
                        <div class="controls">
                            {{ form_errors(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second) }}
                        </div>

                        {{ form_rest(form) }}
                        <div >
                            <br />
                            <input class="btn btn-info" type="submit" value="Register">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-8">
        <div class="center-text logo-ce"><img style="width: 600px;" src="/img/logo.png" alt=""/></div>
    </div>
</div>
{% endblock %}
